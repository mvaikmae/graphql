<div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12 col-md-8 col-lg-6 col-xl-5">
            <div class="card bg-light text-dark" style="border-radius: 1rem;">
                <div class="card-body p-5 text-center">
                    <div class="mb-md-5 mt-md-4 pb-5">


                        <h2 class="fw-bold mb-2 text-uppercase">Login</h2>
                        <p class="text-black-50 mb-5">Log in using your email or username</p>

                        <form id="login-form" action="/login" method="POST">
                            <div data-mdb-input-init class="form-outline form-white mb-4">
                                <input type="text" id="username" class="form-control form-control-lg text-center"
                                    name="username" placeholder="Username or email" />
                            </div>

                            <div data-mdb-input-init class="form-outline form-white mb-4">
                                <input type="password" id="password" class="form-control form-control-lg text-center"
                                    name="password" placeholder="Password" />
                            </div>
                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-outline-dark btn-lg px-5"
                                type="submit">Login</button>
                        </form>
                        <div id="error-message"
                            class="alert alert-danger alert-dismissable fade d-flex justify-content-between"
                            role="alert">
                            <span id="error-text"></span>
                            <button type="button" class="btn-close" aria-label="Close"></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/login.js"></script>